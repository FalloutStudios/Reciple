{
  "name": "@reciple/monorepo",
  "license": "GPL-3.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "test"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "clean": "npx rimraf ./packages/bin ./packages/dist",
    "build": "npx lerna run build --no-private",
    "watch": "npx tsc --watch --noEmit",
    "test": "node ./packages/reciple/bin/bin.mjs ./test -t env:TOKEN",
    "publish:dev": "npx lerna publish prerelease --no-private",
    "docs": "npx lerna run docs --no-private",
    "postinstall": "npm run bootstrap"
  },
  "devDependencies": {
    "@discordjs/docgen": "^0.12.1",
    "@types/node": "^18.15.0",
    "lerna": "^6.5.1",
    "rimraf": "^4.4.0",
    "ts-mixer": "^6.0.3",
    "typescript": "^5.0.2"
  }
}
