{
  "name": "reciple",
  "version": "3.1.0",
  "description": "Handler for Discord.js",
  "author": "FalloutStudios",
  "homepage": "https://reciple.js.org",
  "contributors": [
    "GhexterCortes <cortesghexter@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/FalloutStudios/reciple/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FalloutStudios/reciple.git"
  },
  "license": "GPL-3.0",
  "main": "bin/index.js",
  "bin": "bin/bin.js",
  "engines": {
    "node": ">=16.9.0"
  },
  "files": [
    "bin",
    "resource",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf bin",
    "build": "yarn clean && yarn exec tsc",
    "build:publish": "yarn build && yarn publish && yarn build:docs && yarn publish:docs",
    "build:pub-prerelease": "yarn build && yarn publish --tag pre",
    "build:docs": "yarn workspace docs build",
    "update:docs": "yarn workspace docs update",
    "test": "yarn build && yarn test:start",
    "test:start": "cd test && yarn exec reciple",
    "publish:docs": "yarn build:docs && yarn update:docs"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^9.4.0",
    "dotenv": "^16.0.1",
    "fallout-utility": "^1.4.2",
    "semver": "^7.3.7",
    "wildcard-match": "^5.1.2",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.6",
    "@types/semver": "^7.3.10",
    "discord.js": "^14.0.3",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "discord.js": "14.0.x"
  },
  "workspaces": [
    "./docs/"
  ],
  "packageManager": "yarn@3.2.2"
}
