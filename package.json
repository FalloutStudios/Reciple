{
  "name": "reciple-monorepo",
  "license": "GPL-3.0",
  "workspaces": [
    "packages/*",
    "test"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "clean": "npx rimraf ./packages/bin ./packages/dist",
    "build": "npx lerna run build --no-private && npm run bootstrap",
    "watch": "npx tsc --watch --noEmit",
    "test": "node ./packages/reciple/bin/bin.mjs ./test -t env:TOKEN -y",
    "publish:dev": "npx lerna publish prerelease --no-private",
    "docs": "npx lerna run docs --no-private"
  },
  "devDependencies": {
    "@discordjs/docgen": "^0.12.1",
    "@types/node": "^18.13.0",
    "lerna": "^6.4.1",
    "rimraf": "^4.1.2",
    "ts-mixer": "^6.0.3",
    "typescript": "^4.9.5"
  }
}
