{
  "name": "reciple",
  "version": "2.0.0-pre.0",
  "description": "A Discord.js bot",
  "author": "FalloutStudios",
  "homepage": "https://falloutstudios.github.io/Reciple",
  "license": "GPL-3.0",
  "main": "bin/index.js",
  "bin": {
    "reciple": "bin/bin.js"
  },
  "engines": {
    "node": ">=16.9.0"
  },
  "files": [
    "bin",
    "resource",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf bin",
    "build": "yarn run clean && npx tsc && yarn run reinstall",
    "build:publish": "yarn run build && yarn publish",
    "build:pub-prerelease": "yarn run build && yarn publish --tag beta",
    "reinstall": "npm un reciple -g && npm i ./ -g",
    "postpublish": "yarn run build:docs && yarn run update:docs",
    "test": "yarn run build && yarn run test:start",
    "test:start": "cd test && npx reciple",
    "build:docs": "cd docs && yarn run build",
    "update:docs": "cd docs && yarn run update"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^9.3.0",
    "dotenv": "^16.0.1",
    "fallout-utility": "^1.4.2",
    "semver": "^7.3.7",
    "wildcard-match": "^5.1.2",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "@types/semver": "^7.3.10",
    "discord.js": "^13.8.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "discord.js": "13.8.x"
  }
}
