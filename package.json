{
  "name": "reciple",
  "version": "6.0.0",
  "bin": "./dist/cjs/bin.js",
  "license": "GPL-3.0",
  "main": "./dist/cjs/index.js",
  "typings": "./dist/types/index.d.ts",
  "module": "./dist/mjs/index.js",
  "author": "FalloutStudios",
  "description": "Handler for Discord.js",
  "homepage": "https://reciple.js.org",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/mjs/index.js"
  },
  "keywords": [
    "Discord",
    "Discord.js handler",
    "Reciple"
  ],
  "contributors": [
    "GhexterCortes"
  ],
  "bugs": {
    "url": "https://github.com/FalloutStudios/reciple/issues"
  },
  "scripts": {
    "clean": "yarn exec rimraf dist",
    "build": "yarn clean && yarn build:types && yarn build:cjs && yarn build:mjs",
    "build:types": "npx tsc -p ./tsconfig/tsconfig.types.json",
    "build:cjs": "npx tsc -p ./tsconfig/tsconfig.cjs.json",
    "build:mjs": "npx tsc -p ./tsconfig/tsconfig.mjs.json && echo '{ \"type\": \"module\" }' >> ./dist/mjs/package.json",
    "build:publish": "yarn build && yarn docs && yarn npm publish",
    "build:publish-prerelease": "yarn build && yarn npm publish --tag pre",
    "test": "yarn build && yarn workspace test start",
    "docs": "yarn exec docgen --typescript true -c ./docs/index.json -o ./docs/docs.json -i src/index.ts",
    "watch": "yarn exec tsc --watch --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FalloutStudios/reciple.git"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.9.0"
  },
  "files": [
    "dist",
    "resource",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3",
    "fallout-utility": "^1.5.4",
    "semver": "^7.3.7",
    "wildcard-match": "^5.1.2",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@discordjs/docgen": "^0.12.1",
    "@types/node": "^18.11.0",
    "@types/semver": "^7.3.12",
    "discord.js": "^14.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "discord.js": "^14.5.0"
  },
  "workspaces": [
    "test"
  ],
  "packageManager": "yarn@3.2.2"
}
