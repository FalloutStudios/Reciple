{
  "name": "reciple-monorepo",
  "license": "GPL-3.0",
  "workspaces": [
    "packages/*",
    "test"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "clean": "npx rimraf ./packages/bin ./packages/dist",
    "build": "npx lerna run build && npm run bootstrap",
    "watch": "npx tsc --watch --noEmit",
    "test": "node ./packages/reciple/bin/bin.mjs ./test -t env:TOKEN -y",
    "publish:next": "npx lerna prerelease publish --no-private --temp-tag next"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "lerna": "^6.1.0",
    "rimraf": "^3.0.2",
    "ts-mixer": "^6.0.2",
    "typescript": "^4.9.4"
  }
}
