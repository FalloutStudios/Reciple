{
  "name": "@reciple/npm-loader",
  "description": "Load Reciple modules from node_modules",
  "license": "GPL-3.0",
  "version": "7.4.7",
  "main": "./dist/module.js",
  "module": "./dist/module.mjs",
  "types": "./dist/module.d.ts",
  "keywords": [
    "reciple",
    "discord.js",
    "handler",
    "client"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FalloutStudios",
    "directory": "packages/npm-loader"
  },
  "exports": {
    ".": {
      "types": "./dist/module.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.js"
    }
  },
  "scripts": {
    "clean": "npx rimraf ./dist",
    "build": "npm run clean && npx tsc",
    "docs": "node ../docgen/dist/bin.js -i ./src/module.ts -o ./docs/docs.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@reciple/client": "^7.8.7"
  },
  "peerDependencies": {
    "@reciple/client": "^7.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
