{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": true
  },
  "pipeline": {
    "build": {
      "outputs": ["dist"],
      "inputs": ["src/**"],
      "cache": true,
      "dependsOn": ["^build"],
      "outputMode": "errors-only"
    },
    "docs": {
      "outputs": ["./docs/docs.json"],
      "inputs": ["./src/**/*"],
      "outputMode": "errors-only"
    }
  }
}